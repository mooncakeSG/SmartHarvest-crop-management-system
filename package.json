{
  "name": "smartharvest",
  "version": "1.0.0",
  "description": "AI-powered crop management system",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "css": "tailwindcss -i ./frontend/css/tailwind.css -o ./frontend/css/styles.css --watch",
    "build": "npm run css:build && vite build && npm run build:functions",
    "build:functions": "netlify-lambda build netlify/functions",
    "preview": "vite preview",
    "test": "jest",
    "css:build": "tailwindcss -i ./frontend/css/tailwind.css -o ./frontend/css/styles.css --minify",
    "css:watch": "tailwindcss -i ./frontend/css/tailwind.css -o ./frontend/css/styles.css --watch"
  },
  "dependencies": {
    "autoprefixer": "^10.4.17",
    "chart.js": "^4.4.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "multer": "^2.0.1",
    "netlify-lambda": "^2.0.16",
    "postcss": "^8.4.35",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@tailwindcss/forms": "^0.5.10",
    "@vitejs/plugin-vue": "^5.0.4",
    "jest": "^29.7.0",
    "vite": "^5.1.4"
  }
}
